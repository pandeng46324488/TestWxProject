@model Entity.WeChat_VoteInfoEntity
@{
    ViewBag.Title = "微活动测试";

    //List<Entity.WeChat_VoteOptionEntity> OptionList = ViewData["OptionList"] as List<Entity.WeChat_VoteOptionEntity>;
