@model Entity.WxButtonJsonEntity 
@{
    ViewBag.Title = "自定义菜单";
}

<h2>自定义菜单</h2>
@Html.ActionLink("返回首页", "Index", "Home", null, null)
<hr />

<div>
    @if (null != Model)
    {
        <div>
            <p>是否启用 : @Model.is_menu_open </p>
            <div>
                @for (int i = 0; i < Model.selftmenu_info.button.Count(); i++)
                {
                    <p>一级菜单</p>
                    <div>
                        <h3>信息如下：</h3>
                        <span> Name: @Model.selftmenu_info.button[i].name </span> 
                        | <span> @Model.selftmenu_info.button[i].type </span>
                        | <span> @Model.selftmenu_info.button[i].value </span>
                        @if (Model.selftmenu_info.button[i].type == "" && Model.selftmenu_info.button[i].news_info.list.Count > 0)
                        {
                            <div>
                                <p>二级菜单</p>
                            </div>
                        }
                    </div>
                    <hr />
                } 
            </div>
        </div>
    }
</div>
